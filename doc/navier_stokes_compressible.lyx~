\begin_body

\begin_layout Section
Different forms
\end_layout

\begin_layout Standard
Using 
\begin_inset Formula $\alpha=\left(\kappa-1\right)^{-1}$
\end_inset

 and 
\begin_inset Formula $\kappa=\frac{R}{c_{p}}$
\end_inset

 we get the following equations
\end_layout

\begin_layout Subsection
Density-pressure
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\frac{\partial\rho}{\partial t} & =-\nabla\cdot\left(\rho\vec{v}\right)
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial}{\partial t}u & =-\boldsymbol{v}\cdot\nabla u-\frac{1}{\rho}\nabla_{u}p+\nu\nabla^{2}u+\frac{1}{\rho}\boldsymbol{F}_{u}^{'}\\
\frac{\partial}{\partial t}v & =-\boldsymbol{v}\cdot\nabla v-\frac{1}{\rho}\nabla_{v}p+\nu\nabla^{2}v+\frac{1}{\rho}\boldsymbol{F}_{v}^{'}\\
\frac{\partial}{\partial t}w & =-\boldsymbol{v}\cdot\nabla w-\frac{1}{\rho}\nabla_{w}p+\nu\nabla^{2}w+\frac{1}{\rho}\boldsymbol{F}_{w}^{'}.
\end{align*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\frac{Dp}{Dt} & =\left(\kappa-1\right)^{-1}p\nabla\cdot\boldsymbol{v}\\
\frac{\partial p}{\partial t} & =-\boldsymbol{v}\cdot\nabla p+\alpha p\nabla\cdot\boldsymbol{v}
\end{align*}

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial p}{\partial t} & =-\boldsymbol{v}\cdot\nabla p+\alpha p\nabla\cdot\boldsymbol{v}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
Pressure-temperature
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\frac{\partial}{\partial t}u & =-\boldsymbol{v}\cdot\nabla u-\frac{RT}{p}\nabla_{u}p+\nu\nabla^{2}u+\frac{RT}{p}\boldsymbol{F}_{u}^{'}\\
\frac{\partial}{\partial t}v & =-\boldsymbol{v}\cdot\nabla v-\frac{RT}{p}\nabla_{v}p+\nu\nabla^{2}v+\frac{RT}{p}\boldsymbol{F}_{v}^{'}\\
\frac{\partial}{\partial t}w & =-\boldsymbol{v}\cdot\nabla w-\frac{RT}{p}\nabla_{w}p+\nu\nabla^{2}w+\frac{RT}{p}\boldsymbol{F}_{w}^{'}.
\end{align*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\frac{Dp}{Dt} & =\left(\kappa-1\right)^{-1}p\nabla\cdot\boldsymbol{v}\\
\frac{\partial p}{\partial t} & =-\boldsymbol{v}\cdot\nabla p+\alpha p\nabla\cdot\boldsymbol{v}
\end{align*}

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial p}{\partial t} & =-\boldsymbol{v}\cdot\nabla p+\alpha p\nabla\cdot\boldsymbol{v}
\end{align*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\frac{DT}{Dt} & =\frac{RT}{c_{p}p}\frac{Dp}{Dt}\\
\frac{\partial T}{\partial t} & =-\boldsymbol{v}\cdot\nabla T+\kappa\frac{T}{p}\left(\kappa-1\right)^{-1}p\nabla\cdot\boldsymbol{v}\\
 & =-\boldsymbol{v}\cdot\nabla T+\frac{\kappa}{\kappa-1}T\nabla\cdot\boldsymbol{v}.
\end{align*}

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial T}{\partial t} & =-\boldsymbol{v}\cdot\nabla T+\beta T\nabla\cdot\boldsymbol{v}
\end{align*}

\end_inset

with 
\begin_inset Formula $\beta=\frac{\kappa}{\kappa-1}$
\end_inset

.
\end_layout

\begin_layout Subsection
Density-temperature
\end_layout

\begin_layout Standard
Given 
\begin_inset Formula $p=\rho RT$
\end_inset

 we get
\begin_inset Formula 
\[
\frac{\partial\rho}{\partial t}=-\nabla\cdot\left(\rho\vec{v}\right)
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial}{\partial t}u & =-\boldsymbol{v}\cdot\nabla u-\frac{R}{\rho}\nabla_{u}\left(\rho T\right)+\nu\nabla^{2}u+\frac{1}{\rho}\boldsymbol{F}_{u}^{'}\\
\frac{\partial}{\partial t}v & =-\boldsymbol{v}\cdot\nabla v-\frac{R}{\rho}\nabla_{v}\left(\rho T\right)+\nu\nabla^{2}v+\frac{1}{\rho}\boldsymbol{F}_{v}^{'}\\
\frac{\partial}{\partial t}w & =-\boldsymbol{v}\cdot\nabla w-\frac{R}{\rho}\nabla_{w}\left(\rho T\right)+\nu\nabla^{2}w+\frac{1}{\rho}\boldsymbol{F}_{w}^{'}.
\end{align*}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\frac{DT}{Dt} & =\frac{RT}{c_{p}p}\frac{Dp}{Dt}\\
\frac{\partial T}{\partial t} & =-\boldsymbol{v}\cdot\nabla T+\kappa\frac{T}{p}\left(\kappa-1\right)^{-1}p\nabla\cdot\boldsymbol{v}\\
 & =-\boldsymbol{v}\cdot\nabla T+\kappa\alpha T\nabla\cdot\boldsymbol{v}.
\end{align*}

\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial T}{\partial t} & =-\boldsymbol{v}\cdot\nabla T+\kappa\alpha T\nabla\cdot\boldsymbol{v}.
\end{align*}

\end_inset


\end_layout

